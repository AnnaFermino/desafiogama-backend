{
  "openapi": "3.0.0",
  "info": {
    "title": "API Candidatos",
    "description": "API de formulário para cadastro dos candidatos.",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Ambiente de desenvolvimento"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Cadastro de candidados.",
        "description": "Rota de cadastro dos candidatos, recebe: nome, profissão, cargo pretendido, data de nascimento, estado civil, gênero, CEP, logradouro, número, bairro, cidade, estado, telefone fixo 1, telefone fixo 2, celular, contato, email, identidade, cpf, possui veículo, habilitação.",
        "tags": ["candidato"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "profession": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string"
                  }, 
                  "birth": {
                    "type": "string"
                  }, 
                  "civil": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string"
                  },
                  "cep": {
                    "type": "string"
                  },
                  "street": {
                    "type": "string"
                  },
                  "number": {
                    "type": "string"
                  },
                  "district": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "telephone1": {
                    "type": "string"
                  },
                  "telephone2": {
                    "type": "string"
                  },
                  "cellphone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "identity": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  },
                  "car": {
                    "type": "string"
                  },
                  "license": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}